{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier", //prettier must go last
    "prettier/react" //prettier must go last
  ],
  "rules": {
    "react/prop-types": 0, //0 will cancel this action
    "no-console": 1 // 1 = raises warning
  },
  "plugins": ["react", "import", "jsx-a11y"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect" // let react figue out the version
    }
  }
}